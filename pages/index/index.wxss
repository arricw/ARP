/* 顶部导航栏 - 减小大小 */
.header {
  padding: 16rpx 24rpx;
  background: #4CAF50;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 添加定位交互样式 */
.location {
  display: flex;
  max-width: 200rpx;
  align-items: center;
  padding: 6rpx 12rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 40rpx;
}

.location-icon {
  width: 20rpx !important;
  height: 20rpx !important;
  margin-right: 6rpx;
}

/* 修改定位文字样式 */
.location text {
  font-size: 20rpx !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 搜索栏 - 增加左右间距 */
.search-bar {
  display: flex;
  align-items: center;
  flex: 1;
}

.search-bar input {
  background: #fff;
  border-radius: 40rpx;
  padding: 8rpx 48rpx;
  margin-left: 16rpx;
  flex: 1;
}

.search-button {
  margin-left: 8rpx;
  padding: 0rpx 10px;
  background-color: transparent;
  color: whitesmoke;
  font-size: 24rpx;
  border: none; /* 去掉边框 */
  border-radius: 10rpx;
}

/* 轮播图 - 增加底部间距 */
.banner {
  height: 320rpx;
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.banner image {
  width: 100%;
  height: 100%;
}

/* 分类入口 - 还原原始比例 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  padding: 10rpx;
  margin: 0 5rpx 5rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 4rpx;
}

.category-item image {
  width: 80rpx !important;
  height: 80rpx !important;
  margin-bottom: 12rpx;
}

/* 助农政策专区 - 使其更突出 */
.policy-section {
  margin: 16rpx;
  background: #e9f7e3;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-header .more {
  font-size: 24rpx;
  color: #666;
}

.policy-item {
  padding: 12rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.policy-image {
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.policy-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.policy-title {
  font-weight: bold;
  font-size: 24rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

.policy-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.policy-date {
  color: #666;
  font-size: 20rpx;
}

/* 热销产品标题 - 使其更突出 */
.product-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 8rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-more {
  font-size: 24rpx;
  color: #666;
}

/* 商品列表 */
.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 24rpx 48rpx;
  margin-bottom: 32rpx;
}

.name, .price, .sales {
  display: block;
  width: 100%;
}

.product-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  padding: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.product-item image {
  width: 100%;
  height: 280rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}