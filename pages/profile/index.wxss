/* 统一容器样式 */
.container {
    background: #f8f8f8;
    min-height: 90vh;
    padding: 24rpx;
  }
  
  /* 用户信息卡片 (复用商品卡片样式) */
  .user-card {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
  }
  
  .user-info {
    flex: 1;
  }
  
  .nickname {
    display: block;
    font-size: 36rpx;
    color: #333;
    margin-bottom: 12rpx;
  }
  
  .phone {
    font-size: 28rpx;
    color: #666;
  }
  
  .arrow {
    color: #999;
  }
  
  /* 订单导航 (复用分类页样式) */
  .order-nav {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    background: #fff;
    border-radius: 16rpx;
    padding: 24rpx 0;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  }
  
  .nav-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .nav-text {
    font-size: 28rpx;
    color: #666;
    margin-top: 12rpx;
  }
  
  .badge {
    position: absolute;
    top: -8rpx;
    right: 16rpx;
    background: #e64340;
    color: #fff;
    font-size: 20rpx;
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 18rpx;
    padding: 0 8rpx;
  }
  
/* 功能列表 */
.func-list {
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  }
  
  /* 修复图标对齐 */
  .van-cell__icon {
    vertical-align: middle;
  }

  .van-cell__icon image {
    width: 100%;
    height: 100%;
  }
  
  /* 助农政策区块 */
  .policy-section {
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 24rpx; /* 修改 */
    padding: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
  }

  .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }

  .more {
    font-size: 26rpx;
    color: #4CAF50;
  }

  /* 网格布局 */
  .policy-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx;
  }

  .policy-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .policy-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 12rpx;
  }

  .policy-title {
    font-size: 26rpx;
    color: #666;
    text-align: center;
  }